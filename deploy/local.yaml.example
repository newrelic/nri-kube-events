apiVersion: v1
kind: ServiceAccount
metadata:
  name: nri-kube-events
  namespace: default
---
apiVersion: rbac.authorization.k8s.io/v1
kind: ClusterRole
metadata:
  name: nri-kube-events
rules:
  - apiGroups: [""]
    resources: ["events"]
    verbs: ["get", "watch", "list"]
---
apiVersion: rbac.authorization.k8s.io/v1
kind: ClusterRoleBinding
metadata:
  name: nri-kube-events
roleRef:
  apiGroup: rbac.authorization.k8s.io
  kind: ClusterRole
  name: nri-kube-events
subjects:
  - kind: ServiceAccount
    name: nri-kube-events
    namespace: default
---
apiVersion: v1
data:
  config.yaml: |-
    sinks:
    - name: stdout
    - name: newRelicInfra
      config:
        agentEndpoint: http://localhost:8001/v1/data
        clusterName: <ADD YOUR CLUSTER NAME>
        agentHTTPTimeout: 30s
kind: ConfigMap
metadata:
  name: nri-kube-events
  namespace: default
---
apiVersion: apps/v1
kind: Deployment
metadata:
  name: nri-kube-events
  namespace: default
  labels:
    app: nri-kube-events
    app.kubernetes.io/name: nri-kube-events
spec:
  replicas: 1
  selector:
    matchLabels:
      app.kubernetes.io/name: nri-kube-events
  template:
    metadata:
      labels:
        app.kubernetes.io/name: nri-kube-events
    spec:
      containers:
        - name: kube-events
          image: newrelic/nri-kube-events:1.6.0
          resources:
            limits:
              memory: "128Mi"
              cpu: "500m"
            requests:
              memory: "128Mi"
              cpu: "100m"
          imagePullPolicy: IfNotPresent
          args: ["-config", "/app/config/config.yaml", "-loglevel", "debug"]
          volumeMounts:
            - name: config-volume
              mountPath: /app/config
        - name: infra-agent
          image: newrelic/k8s-events-forwarder:1.20.2
          resources:
            limits:
              memory: 128Mi
              cpu: 500m
            requests:
              memory: 128Mi
              cpu: 100m
          securityContext:
            privileged: false
            runAsUser: 1000 # nri-kube-events
            runAsGroup: 2000 # nri-kube-events
            runAsNonRoot: false
            allowPrivilegeEscalation: false
            readOnlyRootFilesystem: true
          ports:
            - containerPort: 8001
          env:
            - name: "NRIA_LICENSE_KEY"
              value: "<ADD YOUR LICENSE KEY>"
#            - name: "NRIA_VERBOSE"
#              value: "1"
            - name: NRIA_COLLECTOR_URL
              value: "https://staging-infra-api.newrelic.com"
          volumeMounts:
            - mountPath: /var/db/newrelic-infra/data
              name: tmpfs-data
            - mountPath: /var/db/newrelic-infra/user_data
              name: tmpfs-user-data
            - mountPath: /tmp
              name: tmpfs-tmp
      serviceAccountName: nri-kube-events
      volumes:
        - name: config-volume
          configMap:
            name: nri-kube-events
        - name: tmpfs-data
          emptyDir: {}
        - name: tmpfs-user-data
          emptyDir: {}
        - name: tmpfs-tmp
          emptyDir: {}
